        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/leftt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp" />

        <ImageView
            android:id="@+id/watchedornot_watched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/leftt"
            android:layout_toRightOf="@+id/leftt"
            android:src="@drawable/watched_red" />

        <ImageView
            android:id="@+id/watchedornot_notwatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toStartOf="@+id/rightt"
            android:layout_toLeftOf="@+id/rightt"
            android:src="@drawable/notwatch_red" />

