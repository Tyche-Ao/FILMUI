    <TextView
        android:id="@+id/committ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nononoononononono"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
