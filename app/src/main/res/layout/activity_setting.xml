<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:id="@+id/setting_message"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="消息通知"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/setting_lab"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="实验室"/>
            <TextView
                android:paddingLeft="10dp"
                android:text="邀您体验淘票票正在探索的新功能"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
            android:scaleType="fitEnd"
            android:padding="20dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mine_arrow_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_cache"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="清除缓存"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:scaleType="fitEnd"
                android:padding="15dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mine_arrow_gray" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d8d8d8"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/setting_score"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="给我们评分"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:scaleType="fitEnd"
                android:padding="15dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mine_arrow_gray" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d8d8d8"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/setting_update"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="版本更新"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:scaleType="fitEnd"
                android:padding="15dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mine_arrow_gray" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d8d8d8"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/setting_about"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="关于淘票票"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:scaleType="fitEnd"
                android:padding="15dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mine_arrow_gray" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d8d8d8"/>
        </LinearLayout>





    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_out"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp">

    </LinearLayout>









</LinearLayout>